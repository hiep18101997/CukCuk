<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FontBodyTitle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/font_body_title</item>
    </style>

    <style name="FontBodyTextRegular">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/font_body_text</item>
    </style>

    <style name="FontBodyTextOverline">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/font_overline</item>
    </style>

    <style name="FontBodyTextItalic">
        <item name="android:fontFamily">@font/roboto_italic</item>
        <item name="android:textSize">@dimen/font_body_text</item>
    </style>

    <style name="FontHeaderTitle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/font_title_header</item>
    </style>

    <style name="FontHeaderSubTitle1">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/font_subtile_header1</item>
    </style>

    <style name="FontHeaderSubTitle2">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/font_subtile_header2</item>
    </style>

    <style name="FontButton">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/font_button</item>
    </style>

    <style name="FontCaption">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/font_caption</item>
    </style>

    <style name="Theme_Dialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>
    <style name="EditTextDefaultSingleLine" parent="@android:style/TextAppearance.Widget.EditText">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textColor">@color/color_text_main</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/margin_medium_small</item>
        <item name="android:paddingTop">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_medium_small</item>
        <item name="android:paddingBottom">@dimen/margin_normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">@dimen/margin_normal_small</item>
        <item name="android:inputType">textCapSentences</item>
    </style>
    <style name="ButtonDefault" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_primary_no_border_with_radius_selector</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="DialogNegativeButtonStyle">
        <item name="android:textColor">@drawable/selector_negative_btn_text_color</item>
        <item name="android:background">@drawable/selector_btn_negative</item>
        <item name="android:paddingLeft">@dimen/margin_large_small</item>
        <item name="android:paddingTop">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_large_small</item>
        <item name="android:paddingBottom">@dimen/margin_normal</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>
    <style name="DialogPositiveButtonStyle">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:background">@drawable/selector_btn_positive</item>
        <item name="android:paddingLeft">@dimen/margin_large_small</item>
        <item name="android:paddingTop">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_large_small</item>
        <item name="android:paddingBottom">@dimen/margin_normal</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>
    <style name="TextViewDefaultSingleLine" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textColor">@color/color_text_main</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>
