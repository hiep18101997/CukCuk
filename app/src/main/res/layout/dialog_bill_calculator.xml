<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include layout="@layout/view_title_dialog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_10_dp"
        android:paddingTop="@dimen/padding_5_dp"
        android:paddingRight="@dimen/padding_10_dp"
        android:paddingBottom="@dimen/padding_15_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5_dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3.0">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.0"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtScreen"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_keyboard"
                    android:layout_margin="@dimen/margin_keyboard"
                    android:background="@drawable/bg_white_with_border_and_radius"
                    android:clickable="false"
                    android:enabled="false"
                    android:focusable="false"
                    android:gravity="center|end"
                    android:maxLength="14"
                    android:paddingLeft="@dimen/margin_normal_small"
                    android:paddingRight="@dimen/margin_normal_small"
                    android:singleLine="true"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/size_edittext_keyboard"
                    android:textStyle="bold">

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <ImageButton
                    android:id="@+id/btnKeyBack"
                    style="@style/TextViewNumberDark"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_keyboard"
                    android:layout_margin="@dimen/margin_keyboard"
                    android:contentDescription="@string/img_content_description"
                    app:srcCompat="@drawable/ic_backspace_red_24dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3.0">

            <TextView
                android:id="@+id/btnKeyMinus"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/str_minus"
                android:textSize="@dimen/font_size_normal"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/btnKeyPlus"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_marginEnd="0dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/str_plus"
                android:textSize="@dimen/font_size_normal"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/btnKeyClear"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/keyClear"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3.0">

            <TextView
                android:id="@+id/btnKey7"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/key7"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/btnKey8"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/key8"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/btnKey9"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_marginEnd="0dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/key9"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3.0">

            <TextView
                android:id="@+id/btnKey4"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/key4"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/btnKey5"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/key5"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/btnKey6"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_marginEnd="0dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/key6"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3.0">

            <TextView
                android:id="@+id/btnKey1"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/key1"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/btnKey2"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/key2"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/btnKey3"
                style="@style/TextViewNumberDark"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_keyboard"
                android:layout_margin="@dimen/margin_keyboard"
                android:layout_marginEnd="0dp"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/padding_dialog_key_10"
                android:paddingBottom="@dimen/padding_dialog_key_10"
                android:text="@string/key3"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_number_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3.0">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/btnKey0"
                    style="@style/TextViewNumberDark"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_keyboard"
                    android:layout_margin="@dimen/margin_keyboard"
                    android:gravity="center"
                    android:paddingTop="@dimen/padding_dialog_key_10"
                    android:paddingBottom="@dimen/padding_dialog_key_10"
                    android:text="@string/key0"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnKeyAccept"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_keyboard"
                    android:layout_margin="@dimen/margin_keyboard"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/bg_primary_no_border_with_radius_selector"
                    android:gravity="center"
                    android:text="@string/accept"
                    android:textAllCaps="true"
                    android:textColor="@color/color_white"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium">

        <TextView
            android:id="@+id/tv_title_suggest_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_medium"
            android:paddingStart="@dimen/margin_normal"
            android:text="@string/title_suggest_money"
            android:textAllCaps="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/font_size_normal"
            tools:ignore="RtlSymmetry" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvSuggestMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium_small"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_medium_small"
            android:layout_marginBottom="@dimen/margin_normal"
            android:paddingLeft="@dimen/margin_keyboard"
            android:paddingRight="@dimen/margin_keyboard" />
    </LinearLayout>
</LinearLayout>